{
  "name": "masscode-io",
  "version": "0.1.0",
  "description": "Source code of masscode.io",
  "author": {
    "name": "Anton Reshetov",
    "url": "https://github.com/antonreshetov"
  },
  "license": "MIT",
  "repository": "https://github.com/massCodeIO/masscode.io",
  "engines": {
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vitepress dev docs",
    "dev:ui-collection": "run-p watch:ui-collection dev",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "generate:assets": "bun docs/scripts/generate-assets.ts",
    "watch:ui-collection": "bun docs/scripts/generate-ui-collection.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "codemirror": "5",
    "element-plus": "^2.10.2",
    "vue": "^3.5.17",
    "vue-gtag": "3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/codemirror": "^5.60.16",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "axios": "^1.10.0",
    "chokidar": "^4.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "lint-staged": "^16.1.2",
    "sass": "^1.89.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,vue,md}": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "20.16.0"
  }
}
